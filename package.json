{
  "name": "hazel-server",
  "version": "5.1.1",
  "main": "lib/index.js",
  "description": "Lightweight update server for Electron apps",
  "scripts": {
    "dev": "npx vercel dev",
    "test": "xo && jest",
    "precommit": "lint-staged"
  },
  "license": "MIT",
  "repository": "vercel/hazel",
  "xo": {
    "extends": [
      "prettier"
    ],
    "rules": {
      "camelcase": 0,
      "new-cap": 0,
      "unicorn/no-process-exit": 0,
      "no-await-in-loop": 0,
      "unicorn/import-index": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn test && :",
      "prettier --single-quote --no-semi --write --no-editorconfig",
      "git add"
    ]
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "date-fns": "1.29.0",
    "express-useragent": "1.0.15",
    "fetch": "1.1.0",
    "finalhandler": "1.2.0",
    "handlebars": "4.7.7",
    "jest": "24.0.0",
    "micro": "9.3.3",
    "ms": "2.1.3",
    "node-fetch": "2.6.7",
    "router": "1.3.7",
    "semver": "5.5.0",
    "stream-to-string": "1.1.0",
    "test-listen": "1.1.0"
  },
  "devDependencies": {
    "eslint-config-prettier": "8.5.0",
    "husky": "0.14.3",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "xo": "0.52.3"
  }
}
